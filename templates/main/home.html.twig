{% extends 'template.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/css/accueil.css">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8" style="color:rgb(9,73,119);">
                <div>
                    <div class="intro">
                        <h1 class="text-center d-sm-block d-flex justify-content-center" style="font-size:3.5rem;margin-top:74px;">
                            <i class="icon-ghost"></i>

                            <strong><span style="text-decoration: underline;">Bienvenue</span></strong>

                            <i class="icon-ghost"></i>
                        </h1>
                        <p class="text-center" style="font-size:21px;margin-top:21px;">
                            Hey, bienvenue sur Ô'Tako ! <br>
                            Je suis Poulpi et je suis là pour te guider. <br>
                            {% if app.user %}
                                j'ai de nouveaux produits qui peuvent t'intéresser
                            {% else %}
                                Si tu es nouveau, viens vite t'inscrire et <br>
                                deviens un membre de la Tako Family !
                            {% endif %}
                        </p>
                    </div>
                    <div class="buttons">
                        <a class="btn btn-info btn-lg d-block float-none justify-content-center align-items-center align-content-center align-self-center order-4 mx-auto"
                           role="button"
                           href="{% if app.user %}{{ path("catalogC", { 'cat': 'all'}) }}?p=0{% else %}{{ path("register") }}{% endif %}"
                           data-bs-hover-animate="bounce"
                           style="font-size:27px;max-width:435px;margin-top:34px;"
                        >
                            <i class="fa fa-hand-o-right"></i>
                            {% if app.user %}
                                Voir les nouveaux produits
                            {% else %}
                                M'inscrire MAINTENANT !
                            {% endif %}
                            <i class="fa fa-hand-o-left"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <img class="d-block mx-auto" src="/img/logoPoulpe.png" style="width:259px;margin-top:88px;margin-left:40px;">
            </div>
        </div>
        <div id="slider" style="margin-top:70px;">
            <figure>
                <img src="/img/promo13.jpg" alt>
                <img src="/img/promo12.jpg" alt>
                <img src="/img/promo14.jpg" alt>
                <img src="/img/promo15.jpg" alt>
                <img src="/img/promo13.jpg" alt>
            </figure>
        </div>
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}
