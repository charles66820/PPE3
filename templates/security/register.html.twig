{% extends 'template.html.twig' %}

{% block content %}
    <div align="center">
        <div class="container">
            <div class="card card-container" style="padding: 40px;">
                <h1>Inscription</h1>
                <br/><br/>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            {{ form_row(form.login) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.email.first) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.email.second) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.password) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            {{ form_row(form.plainPassword) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.lastname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.phoneNumber) }}
                        </div>
                    </div>
                </div>
                    <div class="form-group">
                        {{ form_row(form.save) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}