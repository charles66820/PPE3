{% extends 'template.html.twig' %}

{% block content %}
    <div align="center">
        <div class="container">
            <div class="card card-container" style="max-width: 350px; padding: 40px 40px;">
                <h2>Mots de passe oublier</h2>
                <br/><br/>
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.username) }}
                    </div>
                    <br/>
                    <div class="form-group">
                        {{ form_widget(form.submit) }}
                    </div>
                {{ form_end(form) }}
                {% if error %}
                    <div class="alert alert-danger">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <span class="initialism form-error-icon badge badge-danger">Erreur</span>
                                <span class="form-error-message">L'identifient n'existe pas.</span>
                            </li>
                        </ul>
                    </div>
                {% endif %}
                {% if msg %}
                    <div class="alert alert-success">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <span class="form-error-message">{{ msg }}</span>
                            </li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}