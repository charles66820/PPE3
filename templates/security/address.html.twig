{% extends 'template.html.twig' %}

{% block content %}
    <div class="container" style="padding:10px 20px;">
        <div class="form-row">
            <div class="col-md-6 relative">
                <h2 class="m-1">Adresses</h2>
                <div class="col-sm-12 col-md-12">
                    <div class="form-group">
                        <ul class="list-group" style="overflow:auto; height: 420px;" >
                            {% for a in address %}
                                <li class="list-group-item">
                                    <div class="row">
                                        <p class="col-9">{{ a.way }} {{ a.complement }} <br> {{ a.zipCode }} {{ a.city }}, {{ a.country }}</p>
                                        <div class="col-3">
                                            <form method="POST" style="display:initial;" action="{{ path('removeAddress', { id:a.id }) }}">
                                                <button type="submit" class="btn btn-danger float-right" onclick="if (confirm('Êtes-vous sur de vouloir supprimer cette adresse ?')) {return true;}else {return false;}">✗</button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6 relative">
                <h2>Ajouter une adresse</h2>
                <hr>
                {{ form_start(form, {class:"mb-5"}) }}
                    <div class="col-sm-12 col-md-12">
                        <div class="form-group">
                            <div class="form-group">
                                {{ form_row(form.way) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.complement) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.zipCode) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.city) }}
                            </div>
                            {{ form_row(form._token) }}
                        </div>
                        <p>L'adresse de livraison dois ce trouver en france métropoliténe !</p>
                        <div class="d-flex justify-content-center">
                            {{ form_widget(form.save) }}
                        </div>
                        <hr>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}